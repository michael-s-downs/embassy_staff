# AI Embassy Staff Configuration
# Copy this file to .env and fill in your values

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Cognitive Search (for enhanced resource searching)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=techhub-resources

# Storage Configuration
STORAGE_TYPE=local  # Options: local, cosmos
STORAGE_PATH=./data  # For local storage

# Azure Cosmos DB (for production)
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE_NAME=embassy-staff
COSMOS_CONTAINER_PREFIX=embassy_

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development  # Options: development, staging, production
API_HOST=0.0.0.0
API_PORT=8000

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=100

# Agent Configuration
ORCHESTRATOR_TIMEOUT_SECONDS=60
NAVIGATOR_MAX_RESULTS=20
ARCHIVIST_RETENTION_DAYS=90

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_MOCK_CATALOG=true  # Set to false when using real TechHub API

# TechHub API (when available)
TECHHUB_API_URL=https://api.techhub.internal
TECHHUB_API_KEY=your-techhub-api-key

# Optional: Application Insights (for monitoring)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=xxx